<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallDetailActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8C8C8C">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <ImageView
                android:id="@+id/call_detail_backBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/call_leftarrow"
                android:layout_margin="17dp"
                android:tint="@color/white"
                />
            <ImageView
                android:id="@+id/call_detail_threedot"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/call_threedot"
                android:layout_alignParentRight="true"
                android:layout_margin="17dp"
                android:tint="@color/white"
                />

            <ImageView
                android:id="@+id/call_detail_pen"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@+id/call_detail_threedot"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/call_pen"
                android:tint="@color/white"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@+id/call_detail_pen"
                android:layout_marginTop="17dp"
                android:src="@drawable/call_star"
                android:tint="@color/white"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/call_detail_imgbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/call_user"
                android:layout_centerHorizontal="true"
                android:layout_margin="80dp"
                android:tint="@color/white"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/call_detail_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/call_detail_imgbox"
            android:layout_margin="20dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/call_phone"
            android:layout_margin="20dp"/>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:id="@+id/call_detail_phoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="123456"
                android:textSize="17dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textSize="10dp"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/call_comment"
            android:layout_margin="20dp"/>

    </LinearLayout>

</LinearLayout>